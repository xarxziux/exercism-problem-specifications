{
  "exercise": "acronym",
  "version": "1.7.0",
  "cases": [
    {
      "description": "Abbreviate a phrase",
      "scenarios": [
        {
          "description": "basic",
          "property": "abbreviate",
          "input": [
            {
              "name": "phrase",
              "type": "string",
              "value": "Portable Network Graphics"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "PNG"
            }
          ]
        },
        {
          "description": "lowercase words",
          "property": "abbreviate",
          "input": [
            {
              "name": "phrase",
              "type": "string",
              "value": "Ruby on Rails"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "ROR"
            }
          ]
        },
        {
          "description": "punctuation",
          "property": "abbreviate",
          "input": [
            {
              "name": "phrase",
              "type": "string",
              "value": "First In, First Out"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "FIFO"
            }
          ]
        },
        {
          "description": "all caps word",
          "property": "abbreviate",
          "input": [
            {
              "name": "phrase",
              "type": "string",
              "value": "GNU Image Manipulation Program"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "GIMP"
            }
          ]
        },
        {
          "description": "punctuation without whitespace",
          "property": "abbreviate",
          "input": [
            {
              "name": "phrase",
              "type": "string",
              "value": "Complementary metal-oxide semiconductor"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "CMOS"
            }
          ]
        },
        {
          "description": "very long abbreviation",
          "property": "abbreviate",
          "input": [
            {
              "name": "phrase",
              "type": "string",
              "value": "Rolling On The Floor Laughing So Hard That My Dogs Came Over And Licked Me"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "ROTFLSHTMDCOALM"
            }
          ]
        },
        {
          "description": "consecutive delimiters",
          "property": "abbreviate",
          "input": [
            {
              "name": "phrase",
              "type": "string",
              "value": "Something - I made up from thin air"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "SIMUFTA"
            }
          ]
        },
        {
          "description": "apostrophes",
          "property": "abbreviate",
          "input": {
            {
              "name": "phrase",
              "type": "string",
              "value": "Halley's Comet"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "HC"
            }
          ]
        },
        {
          "description": "underscore emphasis",
          "property": "abbreviate",
          "input": {
            {
              "name": "phrase",
              "type": "string",
              "value": "The Road _Not_ Taken"
            }
          ],
          "expected": [
            {
              "type": "string",
              "value": "TRNT"
            }
          ]
        }
      ]
    }
  ]
}
